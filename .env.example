# Server Configuration
SERVER_PORT=8080
GIN_MODE=release

# Database Configuration (Local Development)
MYSQL_DSN="mywallet_user:mywallet_pass@tcp(localhost:3306)/mywallet_db?charset=utf8mb4&parseTime=True&loc=UTC"
MYSQL_MAX_IDLE_CONNS=10
MYSQL_MAX_OPEN_CONNS=100

# Database Configuration (Docker)
